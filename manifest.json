{
  "manifest_version": 3,
  "name": "Silly Tavern Jenga Game",
  "version": "1.0",
  "description": "A text-based Jenga game extension for Silly Tavern with dynamic block prompts and randomized stability mechanics.",
  "permissions": [],
  "web_accessible_resources": [
    {
      "resources": ["jenga.json"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "jenga.js"
  },
  "action": {
    "default_icon": "icon.png"
  },
  "icons": {
    "48": "icon.png",
    "128": "icon_128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jenga.js"]
    }
  ]
}
